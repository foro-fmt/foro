{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"all": true,
				"noUndeclaredVariables": "off"
			},
			"style": {
				"all": true,
				"noParameterProperties": "off",
				"useImportType": "off"
			},
			"nursery": {}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 80,
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"trailingCommas": "none",
			"semicolons": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
